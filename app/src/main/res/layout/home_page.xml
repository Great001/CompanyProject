<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/viewpager_image_height">
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_advertise_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/iv_dot_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/viewpage_dot_white"/>
            <ImageView
                android:id="@+id/iv_dot_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/viewpage_dot_white"/>
            <!--<ImageView-->
                <!--android:id="@+id/iv_dot_three"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:src="@drawable/viewpage_dot_white"/>-->
            <!--<ImageView-->
                <!--android:id="@+id/iv_dot_four"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:src="@drawable/viewpage_dot_white"/>-->
            <!--<ImageView-->
                <!--android:id="@+id/iv_dot_five"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:src="@drawable/viewpage_dot_white"/>-->

        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/ll_homepage_print"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_homepage_print"
                android:layout_width="@dimen/home_page_item_icon_width"
                android:layout_height="@dimen/home_page_item_icon_height"
                android:layout_gravity="center"
                android:src="@drawable/print_001"/>
        <TextView
            android:id="@+id/tv_print"
            android:layout_width="match_parent"
            android:layout_height="@dimen/homepage_item_height"
            android:layout_marginTop="8dp"
            android:text="@string/quick_print"
            android:layout_gravity="center"
            android:gravity="center_horizontal"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_homepage_shopping_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_homepage_shopping"
                android:layout_width="@dimen/home_page_item_icon_width"
                android:layout_height="@dimen/home_page_item_icon_height"
                android:layout_gravity="center"
                android:src="@drawable/shop_store"/>
            <TextView
                android:id="@+id/tv_shopping"
                android:layout_width="match_parent"
                android:layout_height="@dimen/homepage_item_height"
                android:layout_marginTop="8dp"
                android:text="@string/relex_shop"
                android:layout_gravity="center"
                android:gravity="center_horizontal"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_homepage_sh_bstore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_homepage_sh_bstore"
                android:layout_width="@dimen/home_page_item_icon_width"
                android:layout_height="@dimen/home_page_item_icon_height"
                android:layout_gravity="center"
                android:src="@drawable/book_market"/>
            <TextView
                android:id="@+id/tv_sh_bstore"
                android:layout_width="match_parent"
                android:layout_height="@dimen/homepage_item_height"
                android:layout_marginTop="8dp"
                android:text="@string/second_hand_book_store"
                android:layout_gravity="center"
                android:gravity="center_horizontal"/>
        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/lv_homepage_news"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>

</LinearLayout>