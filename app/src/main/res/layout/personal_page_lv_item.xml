<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pp_lv_item_height"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_pp_lv_item"
            android:layout_width="@dimen/pp_lv_item_image_width"
            android:layout_height="@dimen/pp_lv_item_image_height"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/book"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_pp_lv_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/pp_lv_item_textsize"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="@dimen/pp_lv_item_image_width"
                android:layout_height="@dimen/pp_lv_item_image_height"
                android:src="@drawable/icon_arrow_right"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                />
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>