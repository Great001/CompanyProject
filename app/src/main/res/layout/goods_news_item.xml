<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

    <ImageView
        android:id="@+id/iv_goods_one"
        android:layout_width="@dimen/shop_goods_iv_width_height"
        android:layout_height="@dimen/shop_goods_iv_width_height"
        android:scaleType="centerCrop"
        android:src="@drawable/loading"
        android:background="@drawable/shop_list_iv_bg"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/shop_goods_item_height"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/iv_goods_one"
        >

    <TextView
        android:id="@+id/tv_goods_name_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加载中..."
        android:textSize="@dimen/shop_goods_info_larger_text_size"
        android:gravity="center_vertical"
        android:singleLine="true"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="20dp"
            android:src="@drawable/rmb"
            />

        <TextView
            android:id="@+id/tv_goods_price_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="12"
            android:textSize="@dimen/shop_goods_info_larger_text_size"
            android:textColor="@color/red"
            android:gravity="center_vertical"

            android:singleLine="true"/>

    </LinearLayout>
    </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/iv_goods_two"
            android:layout_width="@dimen/shop_goods_iv_width_height"
            android:layout_height="@dimen/shop_goods_iv_width_height"
            android:scaleType="centerCrop"
            android:src="@drawable/loading"
            android:background="@drawable/shop_list_iv_bg"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/shop_goods_item_height"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/iv_goods_two"
            >

            <TextView
                android:id="@+id/tv_goods_name_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加载中..."
                android:textSize="@dimen/shop_goods_info_larger_text_size"
                android:gravity="center_vertical"
                android:singleLine="true"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="20dp"
                    android:src="@drawable/rmb"
                    />

                <TextView
                    android:id="@+id/tv_goods_price_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="12"
                    android:textSize="@dimen/shop_goods_info_larger_text_size"
                    android:textColor="@color/red"
                    android:gravity="center_vertical"
                    android:singleLine="true"/>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>